<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="@dimen/profileSIze"
        android:layout_height="@dimen/profileSIze"
        android:id="@+id/profile"
        android:src="@mipmap/lady"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nameHeight"
            android:text="@string/blood_fat"
            android:textSize="@dimen/nameSize"
            />
        <TextView
            android:id="@+id/descText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nameHeight"
            android:text="@string/copyRight"
            android:textSize="@dimen/descSize"
            android:maxLines="1"
            />
    </LinearLayout>

</LinearLayout>
