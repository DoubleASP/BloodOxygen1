<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:id="@+id/electrocarDiogram"

    >
    <com.welling.kinghacker.customView.ElectrocarDiogram
        android:id="@+id/heartDram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/elcAttr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/normal"
            android:textSize="@dimen/font_size"
            android:textColor="@color/colorWhite"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/timeChoose"
            >
        <TextView
            android:id="@+id/elcDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/default_date"
            android:textSize="@dimen/date_size"
            android:textColor="@color/colorWhite"
            android:gravity="end"
            />
            <TextView
                android:id="@+id/elcTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/default_time"
                android:textSize="@dimen/time_size"
                android:textColor="@color/colorWhite"
                android:gravity="end"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
